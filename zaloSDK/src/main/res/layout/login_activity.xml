<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gateway_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <com.zing.zalo.zalosdk.payment.direct.DynamicLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/zalosdk_border_rectangle_no_corner_partial_transparent_31_percent"
            android:minHeight="280dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Đăng nhập"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/header_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#2196F3" />

            <ProgressBar
                android:id="@+id/progress_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                android:minHeight="50dp"
                android:visibility="gone" />

            <include
                android:id="@+id/loginContainer"
                layout="@layout/login_container" />

            <include
                android:id="@+id/support_container"
                layout="@layout/support_container"
                android:visibility="gone" />

            <include
                android:id="@+id/email_guard_container"
                layout="@layout/email_guard_container"
                android:visibility="gone" />

            <include
                android:id="@+id/retry_container"
                layout="@layout/retry_container"
                android:visibility="gone" />

            <include
                android:id="@+id/loginZingIDForm"
                layout="@layout/login_zing_id_form"
                android:visibility="gone" />

            <include
                android:id="@+id/cmnd_container"
                layout="@layout/cmnd_container"
                android:visibility="gone" />

            <include
                android:id="@+id/confirm_cmnd"
                layout="@layout/confirm_cmnd"
                android:visibility="gone" />
        </LinearLayout>
    </com.zing.zalo.zalosdk.payment.direct.DynamicLayout>

</RelativeLayout>